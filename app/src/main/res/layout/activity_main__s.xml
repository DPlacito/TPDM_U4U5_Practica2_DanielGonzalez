<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_S">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cabezera_s"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ImageView
        android:layout_width="463dp"
        android:layout_height="307dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:src="@drawable/s" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En este edificio se encuentra la sociedad de alumnos asi como un taller de mantenimiento que da soporte a las areas de el tecnologico \n \n En frente de la cafeteria tambien se encuentran las coordinaciones de todas las carreras"
        android:textColor="#000"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        />

</LinearLayout>